<%- include('partials/header', { title: 'What would you like to do?', activePage: 'dashboard' }) %>

    <main class="container py-5">
      <section class="page-hero text-center mb-4">
        <h1 class="fw-bold text-success">Hi <%= user.name %>, what brings you here today?</h1>
        <p class="text-muted mb-0">Choose how youd like to use Encore for this session. You can switch anytime.</p>
      </section>

      <div class="row g-4 justify-content-center">
        <div class="col-md-5">
          <form action="/mode" method="POST">
            <input type="hidden" name="mode" value="find" />
            <div class="card card-elevated h-100">
              <div class="card-body d-flex flex-column">
                <h4 class="fw-bold mb-2">Find a performer</h4>
                <p class="text-muted mb-4">
                  Browse the Encore directory to discover performers, filter by genre and location,
                  and contact talent that fits your event.
                </p>
                <div class="mt-auto text-end">
                  <button type="submit" class="btn btn-success">
                    Continue to directory
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>

        <div class="col-md-5">
          <form action="/mode" method="POST">
            <input type="hidden" name="mode" value="manage" />
            <div class="card card-elevated h-100">
              <div class="card-body d-flex flex-column">
                <h4 class="fw-bold mb-2">Manage my profile & settings</h4>
                <p class="text-muted mb-4">
                  Update your profile details, change your photo, and control whether you appear in
                  the performer directory and are open for bookings.
                </p>
                <div class="mt-auto text-end">
                  <button type="submit" class="btn btn-outline-success">
                    Continue to dashboard
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </main>

<%- include('partials/footer') %>
