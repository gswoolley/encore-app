<%- include('partials/header', { title: 'What brings you to Encore?', activePage: 'dashboard' }) %>

    <!-- Page asking the user whether they want to find performers or perform -->
    <main class="container py-5">
      <!-- Hero asking the user what they want to do -->
      <section class="page-hero text-center mb-4">
        <h1 class="fw-bold text-success">Hi <%= currentUser ? currentUser.name : 'there' %>!</h1>
        <p class="text-muted mb-0">What are you here to do today?</p>
      </section>

      <!-- Two primary choices: find performers vs perform -->
      <div class="row g-4 justify-content-center">
        <div class="col-md-5">
          <form action="/purpose" method="POST">
            <input type="hidden" name="purpose" value="find" />
            <div class="card card-elevated h-100">
              <div class="card-body d-flex flex-column purpose-card-body">
                <h4 class="fw-bold mb-2">Find a performer</h4>
                <p class="text-muted mb-4">
                  Browse the Encore directory to discover performers, filter by act type and location,
                  and reach out to the right talent for your event.
                </p>
                <div class="mt-auto text-end">
                  <button type="submit" class="btn btn-outline-success">
                    Continue to directory
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>

        <div class="col-md-5">
          <form action="/purpose" method="POST">
            <input type="hidden" name="purpose" value="perform" />
            <div class="card card-elevated h-100">
              <div class="card-body d-flex flex-column purpose-card-body">
                <h4 class="fw-bold mb-2">I am a performer</h4>
                <p class="text-muted mb-4">
                  Add photos and videos from past events so planners can see your work when they view
                  your profile in the directory.
                </p>
                <div class="mt-auto text-end">
                  <button type="submit" class="btn btn-outline-success">
                    Go to my promo gallery
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <!-- Optional helper link to FAQ -->
      <div class="row justify-content-center mt-4">
        <div class="col-lg-8 text-center">
          <p class="text-muted mb-2">Not sure where to start?</p>
          <a class="btn btn-outline-success btn-sm" href="/faq">Read the FAQ</a>
        </div>
      </div>
    </main>

<%- include('partials/footer') %>
