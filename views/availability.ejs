<%- include('partials/header', { title: 'Availability | Encore', activePage: 'availability' }) %>

    <!-- Page where a performer can set their booking availability -->
    <main class="container py-4">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card card-elevated p-4">
            <h3 class="fw-bold text-success mb-3">Set your availability</h3>
            <p class="text-muted">
              Toggle whether you are currently open for bookings. Organizers will see this status in the directory and on your profile.
            </p>

            <!-- Simple form to toggle availability between Yes and No -->
            <form action="/availability" method="POST" class="mt-3">
              <div class="form-check mb-2">
                <input
                  class="form-check-input"
                  type="radio"
                  name="availability"
                  id="availableYes"
                  value="Y"
                  <%= availability === 'Y' ? 'checked' : '' %>
                />
                <label class="form-check-label" for="availableYes">I am available for bookings</label>
              </div>
              <div class="form-check mb-4">
                <input
                  class="form-check-input"
                  type="radio"
                  name="availability"
                  id="availableNo"
                  value="N"
                  <%= availability !== 'Y' ? 'checked' : '' %>
                />
                <label class="form-check-label" for="availableNo">I am not available right now</label>
              </div>

              <div class="d-flex gap-2">
                <button class="btn btn-success" type="submit">Save availability</button>
                <a class="btn btn-outline-secondary" href="/dashboard">Cancel</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>

<%- include('partials/footer') %>
