<%- include('partials/header', { title: 'My Profile | Encore', activePage: 'profile' }) %>

    <main class="container py-4">

      <!-- Profile header: avatar, name, email, edit/availability buttons -->
      <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center gap-3">
          <% if (profile.imageUrl) { %>
          <img src="<%= profile.imageUrl %>" alt="Profile" class="avatar-lg" />
          <% } else { %>
          <div class="avatar-lg d-flex align-items-center justify-content-center fw-bold text-success">
            No photo
          </div>
          <% } %>
          <div>
            <h2 class="fw-bold text-success mb-1"><%= profile.name %></h2>
            <p class="text-muted mb-0"><%= profile.email %></p>
          </div>
        </div>
        <div class="d-flex gap-2">
          <a class="btn btn-outline-success" href="/profile/edit">Edit profile</a>
          <% if (profile.is_performer) { %>
          <a class="btn btn-success" href="/availability">Availability</a>
          <% } %>
        </div>
      </div>

      <!-- Performer-only About card + always-visible Actions card -->
      <div class="row g-4">
        <% if (profile.is_performer) { %>
        <div class="col-md-8">
          <div class="card card-elevated p-4 h-100">
            <h5 class="fw-bold mb-3">About</h5>
            <p class="text-muted mb-4"><%= profile.bio || 'No bio added yet.' %></p>
            <div class="row">
              <div class="col-sm-6 mb-3">
                <small class="text-uppercase text-muted d-block">Act type</small>
                <span class="fw-semibold"><%= profile.act_category || 'Not set' %></span>
              </div>
              <% if (profile.genre) { %>
              <div class="col-sm-6 mb-3">
                <small class="text-uppercase text-muted d-block">Details / genre</small>
                <span class="fw-semibold"><%= profile.genre %></span>
              </div>
              <% } %>
              <div class="col-sm-6 mb-3">
                <small class="text-uppercase text-muted d-block">Location</small>
                <span class="fw-semibold"><%= profile.location || 'Not set' %></span>
              </div>
              <div class="col-sm-6">
                <small class="text-uppercase text-muted d-block">Availability</small>
                <span
                  class="badge <%= profile.availability === 'Y' ? 'badge-available' : 'badge-unavailable' %>"
                >
                  <%= profile.availability === 'Y' ? 'Open for bookings' : 'Unavailable' %>
                </span>
              </div>
            </div>
          </div>
        </div>
        <% } %>
        <div class="col-md-4">
          <div class="card p-4 h-100">
            <h6 class="fw-bold mb-3">Actions</h6>
            <div class="d-grid gap-2">
              <a class="btn btn-success" href="/directory">Find performers</a>
              <form action="/profile/delete" method="POST" onsubmit="return confirm('Delete your profile?');">
                <button type="submit" class="btn btn-outline-danger w-100">
                  Delete profile
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- Personal media gallery (Past events) -->
      <% if (typeof media !== 'undefined' && media && media.length > 0) { %>
      <div class="row g-4 mt-3">
        <div class="col-12">
          <div class="card card-elevated p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h5 class="fw-bold mb-0">Past events</h5>
              <a class="btn btn-outline-success btn-sm" href="/profile/media">Manage gallery</a>
            </div>
            <div class="row g-3">
              <% media.forEach(function(item) { %>
              <div class="col-md-4 col-sm-6">
                <div class="border rounded p-2 h-100">
                  <% if (item.media_type === 'image') { %>
                  <img
                    src="/uploads/<%= item.media_path %>"
                    alt="Event photo"
                    class="img-fluid rounded mb-2"
                  />
                  <% } else { %>
                  <div class="ratio ratio-16x9 mb-2">
                    <iframe
                      src="/uploads/<%= item.media_path %>"
                      title="Event video"
                      frameborder="0"
                      allowfullscreen
                    ></iframe>
                  </div>
                  <% } %>
                </div>
              </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
      <% } else { %>
      <div class="row g-4 mt-3">
        <div class="col-12">
          <div class="card card-elevated p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h5 class="fw-bold mb-0">Past events</h5>
              <a class="btn btn-outline-success btn-sm" href="/profile/media">Add media</a>
            </div>
            <p class="text-muted mb-0">You havenâ€™t added any media yet.</p>
          </div>
        </div>
      </div>
      <% } %>
    </main>

<%- include('partials/footer') %>
